    <!-- Title -->
    <Text text="Team info" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 24; -fx-underline: true;"/>

    <!-- Team name label -->
    <Text text="Team name" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <font>
            <Font size="18.0" />
        </font>
    </Text>
    <!-- Team name -->
    <Text fx:id="teamName" text="Team Engineers" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font size="18.0" />
        </font>
    </Text>

    <!-- Team leader label -->
    <Text text="Team leader" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <font>
            <Font size="18.0" />
        </font>
    </Text>
    <!-- Team leader -->
    <Text fx:id="teamContact" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font size="18.0" />
        </font>
    </Text>

    <!-- Team members label -->
    <Text text="Team members" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <font>
            <Font size="18.0" />
        </font>
    </Text>
    <!-- Team members -->
    <Text fx:id="teamMembers" text="Merili Pihlak, Sandor Vunk, Martin KÃµnnussaar, Rasmus Meos" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <font>
            <Font size="16.0" />
        </font>
    </Text>

    <!-- Team logo -->
    <ImageView fx:id="teamLogo" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="3">
        <Image url="@/team_logo.jpg"/>
        <GridPane.margin>
            <Insets left="80" />
        </GridPane.margin>
    </ImageView>
</GridPane>
